<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="#FBF8EB">

    <!-- Изображение отеля -->
    <ImageView
        android:id="@+id/hotel_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel_image" />

    <!-- Правая часть: Информация об отеле -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Название отеля -->
        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rios Beach (Intersport Hotel) 4*"
            android:textSize="16sp"
            android:textColor="@color/button" />

        <!-- Описание отеля -->
        <TextView
            android:id="@+id/hotel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Небольшой отель для экономичного отдыха расположен в Бельдиби..."
            android:textSize="10sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#6D6D6D" />

        <!-- Информация о туре -->
        <TextView
            android:id="@+id/hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Турция, Кемер • 2 взрослых • Все включено"
            android:textSize="8sp"
            android:textColor="#6D6D6D" />

        <!-- Нижняя часть: Цена и кнопка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Цена -->
            <TextView
                android:id="@+id/hotel_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="167 225 руб."
                android:textSize="14sp"
                android:textColor="@color/button"
                />

            <!-- Кнопка Забронировать -->
            <Button
                android:id="@+id/hotel_book_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Забронировать"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
